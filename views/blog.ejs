<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Blog</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Blog</h1>

  <a href="/cadastrar_post">Criar novo post</a>

  <div class="posts">
    <% if (posts.length === 0) { %>
      <p>Nenhum post cadastrado ainda.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.titulo %></h2>
          <h4><%= post.resumo %></h4>
          <p><%= post.conteudo %></p>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>